{
    "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:12",
    "hostRequirements": {
      "cpus": 4
    },
    // "waitFor": "onCreateCommand",
    "updateContentCommand": "yarn install",
    "postCreateCommand": "",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "src/App.ts"
        ]
      }
    },
    "portsAttributes": {
      "3000": {
        "label": "Application"
      }
    },
    "forwardPorts": [3000]
  }